@model IEnumerable<Product>
<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>

        <div class="col-6">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Stock
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        ImageUrl
                    </th>
                    <th>
                        CategoryId
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                <tr>
                    <td width="10%">
                        @product.Name
                    </td>
                    <td width="10%">
                        @product.Description
                    </td>
                    <td width="10%">
                        @product.Stock
                    </td>
                    <td width="10%">
                        @product.Price
                    </td>
                    <td width="20%">
                        <img class="img-responsive fit-image" style="width:150px;text-align:center" src="@product.ImageUrl" alt="Alternate Text" />
                    </td>
                    <td width="10%">
                        @product.CategoryId
                    </td>
                    <td width="20%">
                        <div>
                            <a asp-controller="Product" asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>

                </tr>

                }
            </tbody>
        </table>


    }
    else
    {
        <p>Không tồn tại thể loại trong database</p>
    }


</div>